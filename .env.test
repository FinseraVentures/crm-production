# ==============================================
# ðŸ”¥ GENERAL SERVER CONFIG
# ==============================================
NODE_ENV=development
PORT=5000

# ==============================================
# ðŸ”¥ MONGODB CONFIG
# ==============================================
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/mydb

# ==============================================
# ðŸ”¥ JWT AUTH CONFIG
# ==============================================
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# ==============================================
# ðŸ”¥ LOGGING CONFIG (Morgan + Winston)
# ==============================================
LOG_LEVEL=info
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_DIRECTORY=logs
LOG_COMPRESS=false

# ==============================================
# ðŸ”¥ CORS
# ==============================================
CORS_ORIGIN=*

# ==============================================
# ðŸ”¥ RATE LIMIT
# ==============================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# ==============================================
# ðŸ”¥ OPTIONAL: External Log Drains (Papertrail, Datadog, etc.)
# ==============================================
LOG_EXTERNAL_HOST=
LOG_EXTERNAL_PORT=
LOG_EXTERNAL_TOKEN=
